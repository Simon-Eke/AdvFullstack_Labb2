@using AdvFullstack_Labb2.ViewModels.OtherVMs
@model ErrorViewModel
@{
    ViewData["Title"] = ViewBag.ErrorTitle ?? "Unexpected Error";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="error-page">
                <h1 class="display-1 text-warning">:(</h1>
                <h2 class="mb-3">@ViewBag.ErrorTitle ?? "Oops! Something went wrong."</h2>
                <p class="lead text-muted mb-4">@ViewBag.ErrorSubtitle ?? "An unexpected error occured while processing your request."</p>
                <p class="mb-4">@ViewBag.ErrorMessage ?? "We are working to fix this issue. Please try again later."</p>

                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                        Go Home
                    </a>
                    <button onclick="history.back()" class="btn btn-outline-secondary">
                        Go Back
                    </button>
                </div>

                @if (Model.ShowRequestId)
                {
                    <div class="mt-4">
                        <small class="text-muted">Request ID: @Model.RequestId</small>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
