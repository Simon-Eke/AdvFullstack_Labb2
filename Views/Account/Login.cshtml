@using AdvFullstack_Labb2.ViewModels.EditCreateVMs
@model LoginFormVM

<section class="container-fluid vh-80 d-flex justify-content-center align-items-center">
    <div class="row justify-content-center w-100">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg border-0">
                <div class="card-header text-center bg-primary bg-gradient">
                    <h4 class="mb-0 text-light">Logga In</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Account" asp-action="Login">
                        <div class="form-group mb-3">
                            <label asp-for="Username" class="form-label text-dark"></label>
                            <input asp-for="Username" type="text" class="form-control" placeholder="Användarnamn" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label text-dark"></label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Lösenord" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg">Logga In</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>