@using AdvFullstack_Labb2.ViewModels.OtherVMs
@model ErrorViewModel
@{
    ViewData["Title"] = "Page Not Found";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="error-page">
                <h1 class="display-1 text-warning">404</h1>
                <h2 class="mb-3">@ViewBag.ErrorTitle</h2>
                <p class="lead text-muted mb-4">@ViewBag.ErrorSubtitle</p>
                <p class="mb-4">@ViewBag.ErrorMessage</p>

                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                        Go Home
                    </a>
                    <button onclick="history.back()" class="btn btn-outline-secondary">
                        Go Back
                    </button>
                </div>

                @if (Model.ShowRequestId)
                {
                    <div class="mt-4">
                        <small class="text-muted">Request ID: @Model.RequestId</small>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


