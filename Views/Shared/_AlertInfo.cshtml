@if (!string.IsNullOrWhiteSpace(TempData["Error"] as string))
{
    var errorType = TempData["ErrorType"]?.ToString() ?? "General";

    var alertClass = errorType switch
    {
        "ApiDown" => "alert-danger",
        "Timeout" => "alert-warning",
        "JsonError" => "alert-info",
        _ => "alert-danger"
    };

    <div class="alert @alertClass alert-dismissible fade show" role="alert">
        <strong>
            @(errorType switch 
            {
                "ApiDown" => "Service Unavailable:",
                "Timeout" => "Timeout:",
                "JsonError" => "Data Error:",
                _ => "Error:"
            })
        </strong>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

