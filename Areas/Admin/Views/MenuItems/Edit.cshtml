@using AdvFullstack_Labb2.ViewModels.EditCreateVMs
@model MenuItemEditVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Menu Item</h1>

<form asp-action="Edit" method="post">
    <input asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for=Name class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input type="number" step="0.01" min="1" max="1000000" asp-for=Price class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsPopular" class="form-check-label"></label>
        <input type="checkbox" asp-for=IsPopular class="form-check-input" />
        <span asp-validation-for="IsPopular" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for=ImageUrl class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Edit</button>
</form>