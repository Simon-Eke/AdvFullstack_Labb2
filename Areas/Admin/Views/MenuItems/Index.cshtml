@using AdvFullstack_Labb2.ViewModels.DisplayVMs;
@model List<MenuItemAdminVM>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    table td, table th {
        vertical-align: middle;
    }
</style>

<div>
    <div class="text-center">
        <a class="btn btn-success m-3" asp-area="Admin" asp-controller="MenuItems" asp-action="Create">Create New</a>
    </div>
    <table class="table table-bordered table-hover table-striped text-center bg-white">
        <thead class="table-light">
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Is Popular?</th>
                <th>Image Url</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@(item.IsPopular? "Yes" : "No")</td>
                    @{
                        var imageUrl = item.ImageUrl?.ToLower() == "none"
                        ? "https://placehold.co/50"
                        : item.ImageUrl;
                    }
                    <td>
                        <img src="@item.ImageUrl" alt="Image" width="50" height="50" style="object-fit: cover" onerror="this.onerror=null; this.src='https://placehold.co/50';" />
                    </td>
                    <td>
                        <a asp-area="Admin" asp-controller="MenuItems" asp-action="Edit" asp-route-id=@item.Id
                           class="btn btn-sm btn-warning">Edit</a>
                    </td>
                    <td>
                        <form asp-area="Admin" asp-controller="MenuItems" asp-action="Delete" method="Post" class="d-inline">
                            <input type="hidden" name="id" value="@item.Id"/>
                            <button type="submit" class="btn btn-sm btn-danger" 
                                onclick="return confirm('Are you sure you want to delete this item?')">
                                Delete
                            </button>

                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
